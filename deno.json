{
  "tasks": {
    "start": "deno run --allow-net --allow-env --allow-read --allow-write src/main.ts",
    "dev": "deno run --watch --allow-net --allow-env --allow-read --allow-write src/main.ts",
    "dev:mock": "deno run --allow-net --allow-env --allow-read --allow-write src/dev_server.ts",
    "test": "deno test --allow-net --allow-env --allow-read --allow-write tests/"
  },
  "imports": {
    "hono": "npm:hono@4",
    "hono/jsx": "npm:hono@4/jsx",
    "hono/jsx/jsx-runtime": "npm:hono@4/jsx/jsx-runtime",
    "hono/jsx/jsx-dev-runtime": "npm:hono@4/jsx/jsx-dev-runtime",
    "googleapis": "npm:googleapis@144",
    "@std/assert": "jsr:@std/assert@1"
  },
  "compilerOptions": {
    "jsx": "react-jsx",
    "jsxImportSource": "hono/jsx"
  }
}
